<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#26c6da"
    android:orientation="vertical"
    tools:context=".Activity2">

    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/please_enter_name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="38dp" />

    <EditText
        android:id="@+id/edtNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Please enter number"
        android:inputType="number"

        android:minHeight="48dp"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="109dp" />

    <EditText
        android:id="@+id/edtweb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/please_enter_the_website"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editloaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/please_enter_the_location"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/picsad"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:backgroundTint="#00E4ECDE"
            android:clickable="true"
            android:foregroundTint="#45882A"
            app:srcCompat="@drawable/ic_baseline_sentiment_very_dissatisfied_24"
            app:tint="#33691E"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/picmoderate"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="#00DFD25F"
            android:clickable="true"
            android:foregroundTint="#ECD830"
            app:srcCompat="@drawable/ic_baseline_sentiment_satisfied_24"
            app:tint="#E1CE28"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/pichappy"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="#00F8F8F8"
            android:clickable="true"
            app:srcCompat="@drawable/ic_baseline_sentiment_satisfied_alt_24"
            app:tint="#EA2525"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

</LinearLayout>